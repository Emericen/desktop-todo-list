{
  "name": "lychee-desktop-assistant",
  "version": "0.0.1",
  "description": "A desktop assistant that helps you control your computer.",
  "main": "./out/main/index.js",
  "type": "module",
  "author": "梁岳迪 Eddy",
  "homepage": "https://www.lycheeassistant.com/homepage",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "publish": "electron-vite build && electron-builder -p always",
    "build": "electron-vite build && electron-builder",
    "build:win": "electron-vite build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "build": {
    "productName": "Lychee",
    "appId": "com.github.emericen.lychee-assistant-release",
    "publish": [
      {
        "provider": "github",
        "owner": "Emericen",
        "repo": "lychee-assistant-release"
      }
    ],
    "afterSign": "./build/notarize.js",
    "extraResources": [
      {
        "from": "resources/",
        "to": ".",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/atom_symbol.icns"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "Productivity",
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "tailwind-merge": "^3.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.1.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^3.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10",
    "vite": "^6.2.6"
  }
}
